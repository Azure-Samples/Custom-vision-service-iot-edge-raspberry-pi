{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CameraCapture Remote Debug (Python)",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "logToFile": true,
            "redirectOutput": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/modules/CameraCapture/app",
                    "remoteRoot": "/app"
                }
            ],
            "windows": {
                "pathMappings": [
                  {
                    "localRoot": "${workspaceFolder}\\modules\\CameraCapture\\app",
                    "remoteRoot": "/app"
                  }
                ]
            }        
        },
        {
            "name": "CameraCapture Local Debug (Python)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/modules/CameraCapture/app/main.py",
            "console": "integratedTerminal",
            "env": {
                "EdgeHubConnectionString": "${config:azure-iot-edge.EdgeHubConnectionString}",
                "EdgeModuleCACertificateFile": "${config:azure-iot-edge.EdgeModuleCACertificateFile}",
                "VIDEO_PATH": "${workspaceFolder}/modules/CameraCapture/test/AppleAndBanana.mp4",
                "IMAGE_PROCESSING_ENDPOINT": "http://127.0.0.1:80/image",
                "VERBOSE": "True",
                "RESIZE_WIDTH": "256",
                "RESIZE_HEIGHT": "256",
                "SHOW_VIDEO": "False"
            },
            "windows": {
                "program": "${workspaceFolder}\\modules\\CameraCapture\\app\\main.py"
            }
        },
        {
            "name": "ImageClassifierService Remote Debug (Python)",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "logToFile": true,
            "redirectOutput": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/modules/ImageClassifierService/app",
                    "remoteRoot": "/app"
                }
            ],
            "windows": {
                "pathMappings": [
                  {
                    "localRoot": "${workspaceFolder}\\modules\\ImageClassifierService\\app",
                    "remoteRoot": "/app"
                  }
                ]
            }        
        },
        {
            "name": "ImageClassifierService Local Debug (Python)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/modules/ImageClassifierService/app/app-amd64.py",
            "console": "integratedTerminal",
            "env": {
                "EdgeHubConnectionString": "${config:azure-iot-edge.EdgeHubConnectionString}",
                "EdgeModuleCACertificateFile": "${config:azure-iot-edge.EdgeModuleCACertificateFile}"
            },
            "windows": {
                "program": "${workspaceFolder}\\modules\\ImageClassifierService\\app\\app-amd64.py"
            }
        }
    ]
}